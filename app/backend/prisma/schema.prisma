generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Jogo {
  @@map("jogos")
  idJogo String @id
  nomeJogo String 
  precoJogo Float
  descricao String
  dataLancamento DateTime
  dataLancamentoInicial DateTime
  desconto Float
  quantidadeVendido Int
}
