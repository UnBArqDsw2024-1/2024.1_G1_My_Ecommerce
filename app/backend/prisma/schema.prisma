generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Jogo {
  @@map("jogos")
  idJogo String @id
  nomeJogo String 
  precoJogo Float
  descricao String
  dataLancamento DateTime
  dataLancamentoInicial DateTime
  desconto Float
  quantidadeVendido Int
  editoraId Int?  // Definição da chave estrangeira
  desenvolvedoraId Int?  // Definição da chave estrangeira

  // Relação com Editora
  editora Editora? @relation(fields: [editoraId], references: [idEditora])

  // Relação com Desenvolvedora
  desenvolvedora Desenvolvedora? @relation(fields: [desenvolvedoraId], references: [idDesenvolvedora])
}

model Genero {
  @@map("generos")
  idGenero Int @id @default(autoincrement())
  nomeGenero String
}

model Editora {
  @@map("editoras")
  idEditora Int @id @default(autoincrement())
  nomeEditora String

  // Relação inversa com Jogo
  jogos Jogo[]
}

model Desenvolvedora {
  @@map("desenvolvedoras")
  idDesenvolvedora Int @id @default(autoincrement())
  nomeDesenvolvedora String

  // Relação inversa com Jogo
  jogos Jogo[]
}


model Cliente {
  @@map("clientes")
  idCliente String @id
  nomeExibicao String
  // pais: string
  // biblioteca: Biblioteca
  // carrinho: Carrinho
  // pedido: Pedido | null
  dataNascimento DateTime
  nome String
  email String
  senha String
}